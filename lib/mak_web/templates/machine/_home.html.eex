<div class="panel panel-default" style="margin-top:20px">
  <div class="panel-heading">
    <h2>
      <%= @machine.name %>
      <span class="label label-info"><%= @machine.id %></span>
    </h2>
  </div>
  <div class="panel-body">
    <div class="col-sm-6">
      <h4>
        <%= @machine.desc %>
      </h4>
    </div>
    <div class="col-sm-6">
      <%= @machine.image && img_tag(img_from_binary(@machine.image), width: "300px") %>
    </div>
  </div>
</div>
